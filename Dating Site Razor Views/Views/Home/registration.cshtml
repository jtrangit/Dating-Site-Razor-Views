@model Dating_Site_Razor_Views.Models.RegistrationValidation
@{
    ViewData["Title"] = "Registration Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <form method="post">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                    <div class="d-table-cell align-middle">
                        <div class="text-center mt-4">
                            <h1 class="h2">Get started on finding a partner today!</h1>
                            <p class="lead">
                                Interact with lots of people to find your match.
                            </p>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="m-sm-4">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input id="txtFirstName" class="form-control form-control-lg"  asp-for="FirstName" />
                                        <span class="text-danger" asp-validation-for="FirstName"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input id="txtLastName" class="form-control form-control-lg"  asp-for="LastName" />
                                        <span class="text-danger" asp-validation-for="LastName"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input id="txtEmail" class="form-control form-control-lg"  asp-for="Email" />
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input id="txtUsername" class="form-control form-control-lg"  asp-for="Username" />
                                        <span class="text-danger" asp-validation-for="Username"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input id="txtPassword" class="form-control form-control-lg" type="password" asp-for="Password" />
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>

                                    <br />

                                    <center>
                                        <div>
                                            <span class="form-label text-danger" asp-validation-summary="ModelOnly"></span>
                                        </div>
                                    </center>

                                    <br />

                                    <div class="text-center mt-3">
                                        <button class="btn btn-lg btn-primary" type="submit">Create Account</button>
                                    </div>
                                    <div class="text-center mt-3">
                                        <a class="btn btn-lg btn-primary" asp-page="/Home/Login">Back to Login</a>
                                    </div>*
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
