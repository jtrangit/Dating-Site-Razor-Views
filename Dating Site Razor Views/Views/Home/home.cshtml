@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http;
@model Dating_Site_Razor_Views.Pages.Profiles
@{
    Layout = "noNav";
    ViewData["Title"] = "Home Page";
}
@section styles {
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
}
<body>
    <form id="form1" method="post">
    

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top bg-light navbar-light">
        <button class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">

            <i class="fas fa-bars"></i>
        </button>
        <div class="container d-flex justify-content-center">
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav align-items-center mx-auto">
                            <li class="nav-item">
                                <a class="nav-link mx-2" href="home"><i class="fas fa-plus-circle pe-2"></i>Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mx-2" href="@Url.Action("UserProfile", "Home")">My Profile &nbsp &nbsp</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link mx-2" href="#">My Likes &nbsp &nbsp</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link mx-2" href="#">My Matches &nbsp &nbsp</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link mx-2" href="#">My Dates &nbsp &nbsp</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link mx-2">
                                    <i class="fas fa-heart pe-2" style="color:mediumblue">Logged In as: 
                                        @Context.Session.GetString("accountUsername")
                                    </i>
                                        <form id="logoutForm" method="post" asp-controller="Home" asp-action="Logout">
                                            <button type="submit" id="btnLogout" class="btn btn-danger">Logout</button>
                                        </form>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar -->
    <div>
        <br />
         
        <center>
            <h3>
                Search by age shows profiles who are are within 2 years of your age range <br />
                Search by gender shows profiles who are not your gender <br />
                Search by state shows profiles in the same state as you <br />
                Search by commitment shows those are looking for the same kind of relationship as you <br />
            </h3>
        </center>


        <div class="searchbar">
            <div class="row">
                <div class="col-lg-6 card-margin">
                    <div class="card search-form">
                        <div class="card-body p-0">
                            <div id="search-form">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row no-gutters">

                                            <div class="col-lg-4">
                                                <label>Search by:</label>
                                            </div>
                                            <div class="col-lg-4">
                                                <select name="ddlFilterProfiles" id="ddlFilterProfiles" class="form-control">
                                                    <option selected="True" value="Age">Age</option>
                                                    <option value="Gender">Gender</option>
                                                    <option value="State">State</option>
                                                    <option value="Commitment">Commitment</option>
                                                </select>
                                            </div>
                                            <div class="col-lg-4">
                                                    <button type="submit" id="btnSearchForMatches" asp-controller="DatingHome" asp-action="ListProfiles">Search</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            
            @if (Model == null)
            {
                <p><em>Click Search to find other people</em></p>
            }
            else if (Model.profiles.Count == 0)
            {
                <p><em>Nobody was found that fits your search criteria.</em></p>
            }
            else
            {
                <ul>
                @foreach(var profile in ViewBag.ProfilesList)
                {
                    <div class="container mt-5 d-flex justify-content-center">

                        <div class="card p-3">

                            <div class="d-flex align-items-center">

                                <div class="image">
                                    <img src="@profile.profilePic" class="rounded" width="155">
                                </div>

                                <div class="ml-3 w-100">

                                    <h4 class="mb-0 mt-0 description">@profile.description</h4>

                                    <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white profileInfo">

                                        <div class="d-flex flex-column">

                                            <span class="city">City</span>
                                            <span class="city2">@profile.city</span>

                                        </div>

                                        <div class="d-flex flex-column">

                                            <span class="state">State</span>
                                            <span class="state2">@profile.state</span>

                                        </div>

                                        <div class="d-flex flex-column">

                                            <span class="age">Age</span>
                                            <span class="age2">@profile.age</span>

                                        </div>

                                    </div>

                                    <div class="button mt-2 d-flex flex-row align-items-center">
                                        <a class="btn btn-sm btn-outline-primary w-100" asp-route-accID="@profile.accID" asp-action="ViewSpecificProfile" asp-controller="DatingHome">View Profile</a>
                                        &nbsp;
                                        <a class="btn btn-sm btn-outline-primary w-100">Like</a>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>
                }
                </ul>
            }

            
    </div>
        

</form>
</body>